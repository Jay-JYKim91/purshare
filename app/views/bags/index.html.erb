<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1596149615678-8488f200b301?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2089&q=80);">
  <div class="container">
    <h1>Purshare</h1>
    <p>Luxurious purses for share. Feel how it feels before purchasing.</p>
  </div>
</div>

<div class="container index-container">
  <div class="search">
    <%= form_tag bags_path, method: :get do %>
    <%= text_field_tag :query,
                        params[:query],
                        class: "form-control",
                        placeholder: "Put a name or brand of purse" %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="cards">
    <% @bags.each do |bag|%>
    <div class="individual-card">
      <% if bag.available %>
      <% else %>
        <p class="notavailable">Currently <br> Not Available</p>
      <% end %>
      <a href="bags/<%=bag.id %>" class="text-decoration-none">
      <% if bag.images.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path bag.images.first.key, height: 300, width: 400, crop: :fill %>')">
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <% end %>
        <%= bag.name%>:<br>  <%= bag.brand%>
      </div>
      </a>
    </div>
    <% end%>
    </div>
  </div>
