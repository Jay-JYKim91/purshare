<div class="container for-grid">
  <div class="bag_img">
    <%= cl_image_tag(@bag.image.key, width: 350, height: 400) %>
  </div>

  <div class="bag_desciption">
    <h1><%= @bag.name %></h1>
    <p><%= @bag.brand %></p>
    <p><%= @bag.description %></p>
    <p class="text-right">$ <%= @bag.price %> / 1 day</p>
    <%= link_to "RENT", new_bag_booking_path(@bag), class: "btn btn-secondary" %>
  </div>
</div>
<br>
<div class="container">
<div id="map"
     style="width: 100%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>